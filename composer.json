{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "deanhowe/markdown.observer",
    "type": "project",
    "description": "Edit in Markdown or TipTap, preview in real-time, and maintain your `.md` files as the single source of truth. Simple really.",
    "keywords": [
        "markdown",
        "tiptap",
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "calebporzio/sushi": "^2.5.3",
        "ezyang/htmlpurifier": "^4.19",
        "inertiajs/inertia-laravel": "^2.0.10",
        "laravel/boost": "^2.0",
        "laravel/cashier": "^16.2",
        "laravel/dusk": "^8.3.3",
        "laravel/framework": "^12.39",
        "laravel/horizon": "^5.43",
        "laravel/nightwatch": "^1.22",
        "laravel/sanctum": "^4.2.0",
        "laravel/tinker": "^2.10.1",
        "league/html-to-markdown": "^5.1.1",
        "php-webdriver/webdriver": "^1.15.2",
        "sentry/sentry-laravel": "^4.19",
        "spatie/commonmark-shiki-highlighter": "^2.5.1",
        "spatie/laravel-data": "^4.18",
        "spatie/laravel-markdown": "^2.7.1",
        "spatie/laravel-package-tools": "^1.92.7",
        "spatie/shiki-php": "^2.3.2",
        "stevebauman/purify": "^6.3.1",
        "tightenco/ziggy": "^2.6.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24.1",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.25.1",
        "laravel/sail": "^1.48.1",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.3",
        "pestphp/pest": "^3.8.4",
        "pestphp/pest-plugin-drift": "^3.0",
        "pestphp/pest-plugin-faker": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.2",
        "pestphp/pest-plugin-livewire": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "dev:ssr": [
            "npm run build:ssr",
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"php artisan inertia:start-ssr\" --names=server,queue,logs,ssr --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test --log-junit junit-report.xml"
        ],
        "browser-test": [
            "@php artisan config:clear --ansi",
            "@php artisan test ./tests/Browser"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "source",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
